# STYLES
ZSH_HIGHLIGHT_STYLES[default]='fg=252,bold'
ZSH_HIGHLIGHT_STYLES[history-expansion]='fg=161,bold'
ZSH_HIGHLIGHT_STYLES[unknown-token]='fg=144,bold'

# Aliases and Functions
ZSH_HIGHLIGHT_STYLES[alias]='fg=118,bold'
ZSH_HIGHLIGHT_STYLES[function]='fg=118,bold'

# Commands and Builtins
ZSH_HIGHLIGHT_STYLES[command]="fg=118,bold"
ZSH_HIGHLIGHT_STYLES[precommand]="fg=118,bold"
ZSH_HIGHLIGHT_STYLES[hashed-command]="fg=118,bold"
ZSH_HIGHLIGHT_STYLES[builtin]="fg=118,bold"

#ZSH_HIGHLIGHT_STYLES[commandseparator]

# Shell Reserved Words
ZSH_HIGHLIGHT_STYLES[reserved-word]="fg=135,bold"

# Variable Assignments
ZSH_HIGHLIGHT_STYLES[assign]="fg=161,bold"

# Paths
ZSH_HIGHLIGHT_STYLES[path]='fg=81,bold'
ZSH_HIGHLIGHT_STYLES[path_approx]='fg=81,bold'
#ZSH_HIGHLIGHT_STYLES[path_prefix]

# Globbing
ZSH_HIGHLIGHT_STYLES[globbing]='fg=135,bold'

# Options and Arguments
ZSH_HIGHLIGHT_STYLES[single-hyphen-option]='fg=208,bold'
ZSH_HIGHLIGHT_STYLES[double-hyphen-option]='fg=208,bold'

ZSH_HIGHLIGHT_STYLES[back-quoted-argument]="fg=144,bold"
ZSH_HIGHLIGHT_STYLES[single-quoted-argument]="fg=144,bold"
ZSH_HIGHLIGHT_STYLES[double-quoted-argument]="fg=144,bold"

ZSH_HIGHLIGHT_STYLES[dollar-double-quoted-argument]="fg=208,bold"
ZSH_HIGHLIGHT_STYLES[back-double-quoted-argument]="fg=144,bold"

# Brackets
ZSH_HIGHLIGHT_STYLES[bracket-level-1]="fg=208,bold"
ZSH_HIGHLIGHT_STYLES[bracket-level-2]="fg=208,bold"
ZSH_HIGHLIGHT_STYLES[bracket-level-3]="fg=208,bold"
