ZSH_HIGHLIGHT_STYLES[cursor-matchingbracket]="fg=208,bold,bg=135"
ZSH_HIGHLIGHT_STYLES[bracket-error]="fg=208,bold,bg=161"

# PATTERNS
# rm -rf
ZSH_HIGHLIGHT_PATTERNS+=('rm -rf *' 'fg=252,bold,bg=161')

# Sudo
ZSH_HIGHLIGHT_PATTERNS+=('sudo' 'fg=252,bold,bg=161')

# Pipe
ZSH_HIGHLIGHT_PATTERNS+=("\|" 'fg=135,bold')

# Dollar Sign
ZSH_HIGHLIGHT_PATTERNS+=("\$" 'fg=135,bold')
